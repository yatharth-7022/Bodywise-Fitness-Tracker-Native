# Server Configuration
PORT=5000
NODE_ENV=production

# Database - Use the URL provided by your database provider (e.g., Render, Supabase)
DATABASE_URL="postgresql://user:password@your-db-host:5432/database_name"

# JWT Authentication - Use strong random strings for production
JWT_SECRET=your_production_jwt_secret_key_here
REFRESH_TOKEN_SECRET=your_production_refresh_token_secret_here

# CORS - Include your frontend URLs
ALLOWED_ORIGINS=https://expo.dev,exp://,https://your-expo-app-id.expo.dev 